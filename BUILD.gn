group("gdbserver") {
  testonly = true

  deps = [
    ":bin",
    ":gdbserver_unittests",
  ]
}

executable("bin") {
  output_name = "debugserver"

  sources = [
    "command_handler.cc",
    "command_handler.h",
    "main.cc",
    "process.cc",
    "process.h",
    "server.cc",
    "server.h",
    "thread.cc",
    "thread.h",
    "util.cc",
    "util.h",
  ]

  deps = [
    "//lib/ftl",
    "//lib/mtl",
  ]

  libs = [
    "launchpad",
  ]
}

executable("gdbserver_unittests") {
  testonly = true

  sources = [
    "test/run_all_unittests.cc",
    "util.cc",
    "util.h",
    "util_unittest.cc",
  ]

  deps = [
    "//lib/ftl",
    "//third_party/gtest",
  ]

  libs = [
    "runtime",
  ]
}
